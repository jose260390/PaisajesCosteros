@{
	Layout = "~/Views/Shared/_LayoutPages.cshtml";
}

<div class="whole-wrap">
	<div class="container text-center">
		<h1 class="gallery-title">Selecciona una Galería</h1>
		<div class="row justify-content-center">
			<div class="col-md-6 mb-5">
				<form action="@Url.Action("Imagen", "Home")" method="post">
					<div class="circle-image" style="cursor: pointer;" onclick="this.closest('form').submit();">
						<img src="../Content/img/GaleriaPrincipal/Antofagasta.jpg" alt="Antofagasta">
						<input type="hidden" name="nombreCiudad" value="Antofagasta" />
					</div>
					<h3 class="location-title">Antofagasta</h3>
				</form>
			</div>

			<div class="col-md-6 mb-5">
				<form action="@Url.Action("Imagen", "Home")" method="post">
					<div class="circle-image" style="cursor: pointer;" onclick="this.closest('form').submit();">
						<img src="../Content/img/GaleriaPrincipal/Taltal.jpg" alt="Taltal">
						<input type="hidden" name="nombreCiudad" value="Taltal" />
					</div>
					<h3 class="location-title">Taltal</h3>
				</form>
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="col-md-6 mb-5">
				<form action="@Url.Action("Imagen", "Home")" method="post">
					<div class="circle-image" style="cursor: pointer;" onclick="this.closest('form').submit();">
						<img src="../Content/img/GaleriaPrincipal/Tocopilla.jpg" alt="Tocopilla">
						<input type="hidden" name="nombreCiudad" value="Tocopilla" />
					</div>	
					<h3 class="location-title">Tocopilla</h3>
				</form>
			</div>

			<div class="col-md-6 mb-5">
				<form action="@Url.Action("Imagen", "Home")" method="post">
					<div class="circle-image" style="cursor: pointer;" onclick="this.closest('form').submit();">
						<img src="../Content/img/GaleriaPrincipal/Mejillones.jpg" alt="Mejillones">
						<input type="hidden" name="nombreCiudad" value="Mejillones" />
					</div>
					<h3 class="location-title">Mejillones</h3>
				</form>
			</div>
		</div>
	</div>
</div>




