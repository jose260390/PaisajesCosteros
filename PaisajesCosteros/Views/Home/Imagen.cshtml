@model IEnumerable<PaisajesCosteros.Models.Imagen>

@{
    ViewData["Title"] = "Galeria";
    Layout = "~/Views/Shared/_LayoutPages.cshtml";
}
<div class="whole-wrap">
    <div class="container">
        @{
            int i = 0;
            foreach (var item in Model)
            {
                if ((i % 2) == 0)
                {
                    <div class="section-top-border">
                        <h3 class="mb-30">@item.imagen_nombre</h3>
                        <div class="row">
                            <div class="col-md-3">
                                <a href="@item.imagen_ruta" class="img-pop-up"><div class="single-gallery-image" style="background: url(@item.ImagenRuta); margin-top: 0px;"></div></a>
                                <!--
                                    <img src="@item.imagen_ruta" alt="" class="img-fluid">
                                -->
                            </div>
                            <div class="col-md-9 mt-sm-20">
                                <p>@item.imagen_descripcion</p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="section-top-border text-right">
                        <h3 class="mb-30">@item.ImagenNombre</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <p>@item.ImagenDescripcion</p>
                            </div>
                            <div class="col-md-3">
                                <a href="@item.ImagenRuta" class="img-pop-up">
                                    <div class="single-gallery-image" style="background: url(@item.ImagenRuta);margin-top: 0px;"></div>
                                </a>
                                <!--
                                    <img src="@item.ImagenRuta" alt="" class="img-fluid">
                                -->
                            </div>
                        </div>
                    </div>
                }
                i++;
            }
        }
    </div>
</div>
<!-- End Align Area -->
