@{
	Layout = "~/Views/Shared/_LayoutPages.cshtml";
}

<div class="whole-wrap">
	<div class="container text-center">
		<h1 class="gallery-title">Selecciona una Galería</h1>
		<div class="row justify-content-center">
			<!-- Fila 1 -->
			<div class="col-md-6 mb-5">
				<a href="/Galeria/Antofagasta" class="gallery-link">
					<div class="circle-image">
						<img src="../Content/img/Antofa1.JPG" alt="Antofagasta">
					</div>
					<h3 class="location-title">Antofagasta</h3>
				</a>
			</div>

			<div class="col-md-6 mb-5">
				<a href="/Galeria/Taltal" class="gallery-link">
					<div class="circle-image">
						<img src="../Content/img/Tal1.JPG" alt="Taltal">
					</div>
					<h3 class="location-title">Taltal</h3>
				</a>
			</div>
		</div>

		<div class="row justify-content-center">
			<!-- Fila 2 -->
			<div class="col-md-6 mb-5">
				<a href="/Galeria/Tocopilla" class="gallery-link">
					<div class="circle-image">
						<img src="../Content/img/Toc1.JPG" alt="Tocopilla">
					</div>
					<h3 class="location-title">Tocopilla</h3>
				</a>
			</div>

			<div class="col-md-6 mb-5">
				<a href="/Galeria/Mejillones" class="gallery-link">
					<div class="circle-image">
						<img src="../Content/img/Meji1.JPG" alt="Mejillones">
					</div>
					<h3 class="location-title">Mejillones</h3>
				</a>
			</div>
		</div>
	</div>
</div>

<style>
	.gallery-title {
		font-size: 3.2rem;
		text-align: center;
		margin-bottom: 50px;
		font-weight: bold;
		color: #333;
	}

	.circle-image {
		width: 350px;
		height: 350px;
		border-radius: 50%;
		overflow: hidden;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
		margin: 0 auto;
		transition: transform 0.4s ease;
	}

		.circle-image img {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}

		.circle-image:hover {
			transform: scale(1.1);
		}

	.location-title {
		font-size: 2rem;
		font-weight: bold;
		margin-top: 15px;
		color: #555;
	}

	.gallery-link {
		text-decoration: none;
		color: inherit;
	}

		.gallery-link:hover {
			text-decoration: none;
		}
</style>



